{
  "name": "temporal-game-of-life",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "lint": "eslint .",
    "start": "tsx src/worker.ts",
    "start.watch": "nodemon src/worker.ts",
    "workflow": "tsx src/client.ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "vitest run",
    "foo": "vitest --config ./vitest.config.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "tsx"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "devDependencies": {
    "@temporalio/testing": "^1.11.5",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.9.3",
    "nodemon": "^3.1.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "@temporalio/activity": "^1.11.5",
    "@temporalio/client": "^1.11.5",
    "@temporalio/worker": "^1.11.5",
    "@temporalio/workflow": "^1.11.5",
    "nanoid": "^5.0.8"
  }
}
